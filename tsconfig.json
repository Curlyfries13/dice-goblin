{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "sourceMap": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "baseUrl": ".",
    // "noUncheckedIndexedAccess": true, // TODO: add this to tighten up the type checker
    "noEmit": true
  },
  "exclude": ["src/debug/*"]
}
